@model QuizApplication.Models.Quiz

@{
    ViewBag.Title = "ArchiveView";
}

<h2>Biztosan archiválni szeretné ezt a kvízt?</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Quiz</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.Label("Kvíz kategória", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label col-md-2" })

            @Html.HiddenFor(model => model.Name)
        </div>

        <div class="form-group">
            @Html.Label("Archiválás", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.CheckBoxFor(m => m.Archived, new { @checked = Model.Archived})
                    @Html.ValidationMessageFor(model => model.Archived, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Mentés" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Vissza", "QuizStart")
</div>
