@model QuizApplication.Models.UserViewModel

@{
    ViewBag.Title = "User Registration";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="container">
            <div class="row">
                <div>
                    <div class="form-group userLabel">Regisztráció</div>
                    <div class="form-group userTextBox">
                        @Html.Label("Becenév", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            @Html.EditorFor(model => model.NickName, new { htmlAttributes = new { @class = "form-control textBox" } })
                            @Html.ValidationMessageFor(model => model.NickName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group userTextBox">
                        @Html.Label("E-mail cím", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control textBox" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group userTextBox">
                        @Html.Label("Jelszó", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            @Html.EditorFor(model => model.PlainPassword, new { htmlAttributes = new { @class = "form-control textBox" } })
                            @Html.ValidationMessageFor(model => model.PlainPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group registerAvatarDivOutside">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 registerAvatarDivInside">
                        <img src="data:image/jpeg;base64,@System.Convert.ToBase64String(Model.AvatarImage)" alt="Alternate Text" />
                        @Html.HiddenFor(x => x.AvatarId)
                    </div>
                </div>
            </div>

            @*Save buton + animation*@
            <div class="form-group saveButtonDivOutside">
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 saveButtonDivLeft">
                    <ul class="ulLeft">
                        <li></li>
                        <li></li>
                        <li></li>
                        <li></li>
                        <li></li>
                        <li></li>
                        <li></li>
                        <li></li>
                    </ul>
                </div>
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 saveButtonDivCenter">
                    <input type="submit" value="Mentés" class="uniqueButton btn btn-default" />
                </div>
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 saveButtonDivRight">
                    <ul class="ulRight">
                        <li></li>
                        <li></li>
                        <li></li>
                        <li></li>
                        <li></li>
                        <li></li>
                        <li></li>
                        <li></li>
                    </ul>
                </div>
            </div>

        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
