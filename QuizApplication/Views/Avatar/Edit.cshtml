                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control textBox" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataInHttpPostedFileBase, htmlAttributes: new { @class = "control-label col-xs-2 col-sm-2 col-md-2 col-lg-2" })
