                <input type="file" name="@nameof(Model.DataInHttpPostedFileBase)" id="@nameof(Model.DataInHttpPostedFileBase)" class="form-control textBox" />
                @Html.ValidationMessageFor(model => model.DataInHttpPostedFileBase, "", new { @class = "text-danger" })
            </div>
        </div>
        <a class="tableurlbutton col-xs-12 col-sm-12 col-md-12 col-lg-12" href="@Url.Action("Index")"><div class="tablebutton">Vissza</div></a>
    </div>

