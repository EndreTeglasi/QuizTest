@model QuizApplication.Models.AvatarViewModel

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm("Edit", "Avatar", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group userLabel col-xs-12 col-sm-12 col-md-12 col-lg-12">Szerkesztés</div>
    <div class="form-horizontal userDetails col-xs-12 col-sm-12 col-md-12 col-lg-12">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-xs-2 col-sm-2 col-md-2 col-lg-2" })
