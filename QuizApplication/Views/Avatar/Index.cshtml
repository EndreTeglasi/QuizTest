@model IEnumerable<QuizApplication.Models.AvatarViewModel>

@{
    ViewBag.Title = "Index";
}
<div class="form-group userLabel">Avatár lista</div>
<div class="userList">
    <table class="table">
        <tr class="tableHeadDiv">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SourceString)
            </th>
            <th>
                @Html.DisplayName("Szerkesztés")
            </th>
            <th>
                @Html.DisplayName("Törlés")
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <img src="@item.SourceString" class="imgUserList"/>
                </td>
                <td>
                    <a class="tableurlbutton" href="@Url.Action("Edit", new { id = item.Id })"><div class="tablebutton">Szerkesztés</div></a>
                </td>
                <td>
                    <a class="tableurlbutton" href="@Url.Action("Delete", new { id = item.Id })"><div class="tablebutton">Törlés</div></a>
                </td>
            </tr>
        }
    </table>
</div>