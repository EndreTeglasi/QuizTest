<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Orbitron" rel="stylesheet">
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" />
</head>
<body class="container" id="particles-js">
    <div>
        @if (Session["IsLoggedIn"]?.ToString() != "true")
        {
            <a class="urlbutton" href="@Url.Action("Register", "UserAccount")"><div class="menubutton menubuttonEnterTwoIn">Regisztráció</div></a>
            <a class="urlbutton" href="@Url.Action("Login", "UserAccount")"><div class="menubutton menubuttonEnterOneIn">Belépés</div></a>
        }
        else if (Session["IsLoggedIn"]?.ToString() == "true" && Session["UserTypeId"]?.ToString() == "1")
        {
            <div class="menubutton menubuttonAdminSixIn">Üdvözlet @Session["NickName"]</div>
            <a class="urlbutton" href="@Url.Action("QuizStart", "Quiz")"><div class="menubutton menubuttonAdminFiveIn">Kvíz</div></a>
            <a class="urlbutton" href="@Url.Action("QuizListView", "Quiz")"><div class="menubutton menubuttonAdminFourIn">Kvíz lista</div></a>
            <a class="urlbutton" href="@Url.Action("Index", "Avatar")"><div class="menubutton menubuttonAdminThreeIn">Beállítások</div></a>
            <a class="urlbutton" href="@Url.Action("Index", "User")"><div class="menubutton menubuttonAdminTwoIn">Felhasználók</div></a>
            <a class="urlbutton" href="@Url.Action("Logout", "UserAccount")"><div class="menubutton menubuttonAdminOneIn">Kilépés</div></a>
        }
        else if (Session["IsLoggedIn"]?.ToString() == "true" && Session["UserTypeId"]?.ToString() == "2")
        {
            <div class="menubutton menubuttonUserThreeIn">Üdvözlet @Session["NickName"]</div>
            <a class="urlbutton" href="@Url.Action("QuizStart", "Quiz")"><div class="menubutton menubuttonUserTwoIn">Kvíz</div></a>
            <a class="urlbutton" href="@Url.Action("Logout", "UserAccount")"><div class="menubutton menubuttonUserOneIn">Kilépés</div></a>
        }
    </div>
    <script src="@Url.Content("~/Scripts/particles.js")"></script>
    <script src="@Url.Content("~/Scripts/app.js")"></script>




    <div class="container body-content">
        @RenderBody()
    </div>
    <script src="@Url.Content("~/Scripts/particles.js")"></script>
    <script src="@Url.Content("~/Scripts/app.js")"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="@Url.Content("~/Scripts/fadeout.js")"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
